                    }
                }
            },
            "Patients": {
                "type": "object",
                "required": [],
                "properties": {}
            },
            "PatientById": {
                "type": "object",
                "required": [],
                "properties": {}
            },
            "Specialties": {
                "type": "object",
                "required": [],
                "properties": {}
            },
            "RegisterDoctor": {
                "type": "object",
                "required": [
                    "name",
                    "cpf",
                    "crm",
                    "specialtyName"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nome do usuário"
                    },
                    "cpf": {
                        "type": "string",
                        "description": "CPF do usuário"
                    },
                    "crm": {
                        "type": "string",
                        "description": "CRM do médico"
                    },
                    "specialtyName": {
                        "type": "string",
                        "description": "Especialidade médica"
                    }
                }
            },
            "Doctors": {
                "type": "object",
                "required": [],
                "properties": {}
            },
            "RegisterAppointment": {
                "type": "object",
                "required": [
                    "appointmentDateTime",
                    "doctorName",
                    "patient"
                ],
                "properties": {
                    "appointmentDateTime": {
                        "type": "string",
                        "description": "Data e Hora da consulta (formato: DD/MM/YYYY as HH:mm)",
                        "example": "20/12/2024 as 15:00"
                    },
                    "observation": {
                        "type": "string",
                        "description": "Observações sobre a consulta"
                    },
                    "doctorName": {
                        "type": "string",
                        "description": "Nome do médico"
                    },
                    "patient": {
                        "type": "object",
                        "required": [
                            "name",
                            "cpf",
                            "email",
                            "phone"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Nome do paciente"
                            },
                            "cpf": {
                                "type": "string",
                                "description": "CPF do paciente (formato: XXX.XXX.XXX-XX)",
                                "pattern": "^\\d{3}\\.\\d{3}\\.\\d{3}-\\d{2}$",
                                "example": "009.887.332-00"
                            },
                            "email": {
                                "type": "string",
                                "format": "email",
                                "description": "Email do paciente",
                                "example": "user.test@example.com"
                            },
                            "phone": {
                                "type": "string",
                                "description": "Telefone do paciente (formato: (XX) XXXXX-XXXX)",
                                "pattern": "^\\(\\d{2}\\)\\s\\d{4,5}-\\d{4}$",
                                "example": "(51) 99894-8909"
                            }
                        }
                    }
                }
            },
            "UpdateAppointmentStatus": {
                "type": "object",
                "required": [
                    "status"
                ],
                "properties": {
                    "status": {
                        "type": "string",
                        "format": "Status",
                        "description": "Status da consulta"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
