                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Usuário não autenticado!"
                                    },
                                    "statusCode": {
                                        "type": "integer",
                                        "example": 401
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "schemas": {
            "Register": {
                "type": "object",
