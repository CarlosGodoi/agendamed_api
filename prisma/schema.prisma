generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = env("ERD_PATH")
  theme    = "dark"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OPERATOR
  DOCTOR
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  cpf        String
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime?
  role       Role

  @@map("users")
}

model Patient {
  id           String        @id @default(uuid())
  name         String
  cpf          String        @unique
  email        String
  phone        String
  created_at   DateTime      @default(now())
  updated_at   DateTime?
  doctor       Doctor?       @relation(fields: [doctorId], references: [id])
  doctorId     String?
  appointments Appointment[]

  @@map("patients")
}

model Specialty {
  id   String @id @default(uuid())
  name String @unique

  doctors     Doctor[]
  Appointment Appointment[]

  @@map("specialties")
}

model Doctor {
  id           String        @id @default(uuid())
  name         String
  cpf          String        @unique
  crm          String
  created_at   DateTime      @default(now())
  updated_at   DateTime?
  specialty    Specialty?    @relation(fields: [specialtyId], references: [id])
  patients     Patient[]
  appointments Appointment[]
  specialtyId  String

  @@map("doctors")
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW
}

model Appointment {
  id                  String            @id @default(uuid())
  appointmentDateTime DateTime
  status              AppointmentStatus @default(SCHEDULED)
  observation         String?
  created_at          DateTime          @default(now())
  updated_at          DateTime?
  patient             Patient           @relation(fields: [patientId], references: [id])
  patientId           String
  doctor              Doctor            @relation(fields: [doctorId], references: [id])
  doctorId            String
  specialty           Specialty         @relation(fields: [specialtyId], references: [id])
  specialtyId         String

  @@map("appointments")
}
